{
    "root": true,
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "extends": [
        "plugin:vue/strongly-recommended",
        "prettier",
        "plugin:json/recommended"
    ],
    "rules": {
        "prettier/prettier": "error",
        "curly": ["error", "all"],
        "no-confusing-arrow": "off",
        "no-mixed-operators": "off",
        "no-tabs": [
            "error",
            {
                "allowIndentationTabs": true
            }
        ],
        "no-unexpected-multiline": "error",
        "quotes": [
            "error",
            "single",
            {
                "avoidEscape": true,
                "allowTemplateLiterals": false
            }
        ],
        "no-console": 0,
        "no-debugger": 2,
        "no-empty-pattern": "off",
        "no-empty": "off",
        "no-undef": "off",
        "vue/no-unused-components": "warn",
        "vue/attributes-order": [
            "warn",
            {
                "order": [
                    "DEFINITION",
                    "LIST_RENDERING",
                    "CONDITIONALS",
                    "RENDER_MODIFIERS",
                    "GLOBAL",
                    "UNIQUE",
                    "TWO_WAY_BINDING",
                    "OTHER_DIRECTIVES",
                    "OTHER_ATTR",
                    "EVENTS",
                    "CONTENT"
                ]
            }
        ],
        "vue/order-in-components": [
            "warn",
            {
                "order": [
                    "el",
                    "name",
                    "parent",
                    "functional",
                    ["delimiters", "comments"],
                    ["components", "directives", "filters"],
                    "extends",
                    "mixins",
                    "inheritAttrs",
                    "model",
                    ["props", "propsData"],
                    "fetch",
                    "asyncData",
                    "data",
                    "computed",
                    "watch",
                    "LIFECYCLE_HOOKS",
                    "methods",
                    "head",
                    ["template", "render"],
                    "renderError"
                ]
            }
        ],
        "vue/html-self-closing": [
            "error",
            {
                "html": {
                    "void": "always",
                    "normal": "always",
                    "component": "always"
                },
                "svg": "always",
                "math": "always"
            }
        ],
        "vue/html-indent": ["warn", 4, {
            "attribute": 1,
            "baseIndent": 1,
            "closeBracket": 0,
            "alignAttributesVertically": true,
            "ignores": []
        }],
        "vue/valid-v-on": "off",
        "vue/valid-v-model": "off",
        "vue/no-unused-vars": "off",
        "no-unused-vars": "off",
        "no-redeclare": "off",
        "no-inner-declarations": "off",
        "no-useless-escape": "off",
        "no-const-assign": "off",
        "no-constant-condition": "off",
        "no-unreachable": "off",
        "linebreak-style": "off",
        "vue/no-confusing-v-for-v-if": "error",
        "object-shorthand": "error"
    },
    //    "parserOptions": {
    //        "parser": "eslint-parser",
    //        "sourceType": "module",
    //        "ecmaVersion": 2018
    //    },
    "plugins": ["import", "vue", "prettier", "json"]
}
